{
  "openapi": "3.0.0",
  "info": {
    "title": "Pet API",
    "version": "1.0.0"
  },
  "paths": {
    "/pets#x-model=cat": {
      "get": {
        "tags": ["Cat"],
        "summary": "Get a Cat",
        "responses": {
          "200": {  
            "description": "A Cat",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cat"
                }
              }
            },
            "headers": {
              "x-pet-type": {
                "description": "Type of pet returned; either 'cat'",
                "schema": {
                  "type": "string",
                  "enum": ["cat"]
                }
              }
            }
          }
        }
      }
    },
    "/pets/{id} #header[x-model]=cat": {
      "get": {
        "tags": ["Cat"],
        "summary": "Get a Cat",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {  
            "description": "A Cat",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Cat"
                }
              }
            },
            "headers": {
              "x-pet-type": {
                "description": "Type of pet returned; either 'cat'",
                "schema": {
                  "type": "string",
                  "enum": ["cat"]
                }
              }
            }
          }
        }
      }
    },
    "/pets#x-model=dog": {
      "get": {
        "tags": ["Dog"],
        "summary": "Get a Dog",
        "responses": {
          "200": {
            "description": "A Dog",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Dog"
                }
              }
            },
            "headers": {
              "x-pet-type": {
                "description": "Type of pet returned; either 'dog'",
                "schema": {
                  "type": "string",
                  "enum": ["dog"]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Cat": {
        "type": "object",
        "properties": {
          "petType": { "type": "string", "enum": ["cat"] },
          "name": { "type": "string" },
          "color": { "type": "string" },
          "meow": { "type": "boolean" }
        },
        "required": ["petType", "name", "meow"]
      },
      "Dog": {
        "type": "object",
        "properties": {
          "petType": { "type": "string", "enum": ["dog"] },
          "name": { "type": "string" },
          "breed": { "type": "string" },
          "bark": { "type": "boolean" }
        },
        "required": ["petType", "name", "bark"]
      }
    }
  }
}
